
@{
	ViewData["Title"] = "Index";
	var alert = "Bu bir uyari mesajidir";
}

<h1>Ornek Controller Sayfasi, Index</h1>

<div>Gunun Tarihi : @DateTime.Now.ToShortDateString()</div>
@{
	var dateTime = DateTime.Now.ToShortDateString();
	var message = "Merhaba";

	@: Bugunun Tarihi : @dateTime
	<div>Mesaj : @message</div>

	<text>Bugunun Tarihi : @dateTime</text>
}

@if (1 == 1)
{
						<p>Dogru</p>
}
else if (DateTime.IsLeapYear(DateTime.Now.Year)) // artik yil sorgulama
{
						<p>Artik Yil</p>
}
else
{
			<h1>@alert</h1>
						<p>Yanlis</p>
}

@for (int i = 0; i < 10; i++)
{
				<p>@i</p>
}
@foreach (var item in Enumerable.Range(1, 10).ToList())
{
	<p>@item</p>
}
